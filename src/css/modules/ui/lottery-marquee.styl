.lottery-share-modal
    font-size: 16 *$px
    .u-flex-item-1
        line-height: 40 *$px
        position: relative
        
        &:first-child:after
            content: ''
            position: absolute
            height: 14 *$px
            width: 1px
            right: 0
            top: 50%
            transform: translateY(-50%)
            background: $color_gray_border
            

    .icon
        position: relative
        padding-left: 50 *$px
        &:before
            font-size: 24 *$px
            width: 32 *$px
            height: 32 *$px
            line-height: 32 *$px
            border-radius: 32 *$px
            border: 1px solid $color_gray_border
            color: $color_gray_summary
            position: absolute
            left: 0
            top: 50%
            transform: translateY(-50%)

.lite-modal.is-for-july-lottery-alert-modal
    .box
        //background: $color_red
        display: block
        background: #be3247
        
        .btn
            background: $color_yellow
            color: $color_red
            border-color: $color_yellow
        .icon.icon-delete
            &, &:hover
                color: rgba(255, 255, 255, .6)

.lottery-result
    &-img
        width: 100%
        max-width: 328 *$px
        margin: 0 auto -20 *$px
        position: relative
        img,
        &:before,
        &:after
            animation: 3000ms ease infinite
            animation-fill-mode: forwards

        img
            margin: auto;
            max-width: 100%
            display: block
            position: relative
            z-index: 3
            animation-name: lottery-result-img-main
            animation-iteration-count: 1

        &:before,&:after
            content: ''
            position: absolute
            z-index: 1
            left: 0
            top: 0
            width: 100%
            height: 100%
            background-size: 100%
        &:before
            animation-duration: 3000ms
            animation-name: lottery-result-img-01
        &:after
            animation-duration: 4000ms
            animation-name: lottery-result-img-02


    &-img-0
        &:before
            background-image: url("/images/lottery-july/0/1.png")
        &:after
            background-image: url("/images/lottery-july/0/2.png")
    &-img-1
        &:before
            background-image: url("/images/lottery-july/1/1.png")
        &:after
            background-image: url("/images/lottery-july/1/2.png")
    &-img-2
        &:before
            background-image: url("/images/lottery-july/2/1.png")
        &:after
            background-image: url("/images/lottery-july/2/2.png")
    &-img-5
        &:before
            background-image: url("/images/lottery-july/5/1.png")
        &:after
            background-image: url("/images/lottery-july/5/2.png")


@keyframes lottery-result-img-01
    0%
        opacity: 1
    25%
        opacity: .4
    50%
        opacity: 1
    75%
        opacity: .4
    100%
        opacity: 1

@keyframes lottery-result-img-02
    0%
        opacity: 1
        transform: translateY(0px)
    25%
        opacity: .2
        transform: translateY(-4px)
    50%
        opacity: .8
        transform: translateY(4px)
    75%
        opacity: .2
        transform: translateY(-2px)
    100%
        opacity: 1
        transform: translateY(0px)

@keyframes lottery-result-img-main
    0%
        transform: scale(0.1)
    25%
        transform: scale(1.2)
    50%
        transform: scale(.8)
    100%
        transform: scale(1)

