.lottery-marquee
    background: #be3247
    min-height: 100%

    &-main
        overflow: hidden
        padding: 28 *$px 30 *$px


    &-list
        position: relative
        padding: 100% 0 0 0
        background: $color_red
    &-row
        position: absolute
        left: 0
        right: 0
        box-sizing: border-box

    &-row-1
        top: 0
        border-bottom: 1px solid $color_red
        .lottery-marquee-item-inner
            top: 0
    &-row-2
        top: 25%
        bottom: 25%
        border-top: 1px solid $color_red
        border-bottom: 1px solid $color_red
        overflow: hidden
        .lottery-marquee-item-inner
            top: 0
    &-row-3
        bottom: 0
        border-top: 1px solid $color_red
        .lottery-marquee-item-inner
            bottom: 0

    //
    //for $i in (1..3)
    //    &-row-{$i}
    //        display: block

    &-item
        position: absolute
        z-index: 2
        top: 0

        &-inner
            position: absolute
            width: 100%

        img
            width: 100%
            display: block
            //position: absolute

        &.active &-inner
            &:after
                //content: ''
                //position: absolute
                //z-index: 1
                //left: 0
                //top: 0
                //bottom: 0
                //right: 0
                //border: 4 *$px solid #802838
                //background: rgba(0, 0, 0, .5)
                display: none

    &-item-0
        width: 50%
        left: 0
        border-right: 1px solid $color_red
    &-item-1
        width: 50%
        right: 0
        border-left: 1px solid $color_red

    &-item-5
        width: 25%
        left: 0
        border-right: 1px solid $color_red
    &-item-2
        width: 25%
        right: 0
        border-left: 1px solid $color_red

    &-item-4
        width: 50%
        left: 0
        border-right: 1px solid $color_red

    &-item-3
        width: 50%
        right: 0
        border-left: 1px solid $color_red
        
        
    &-content
        position: absolute
        z-index: 2
        top: 0
        left: 25%
        right: 25%
        bottom: 0
        border-left: 1px solid $color_red
        border-right: 1px solid $color_red
        background: #fff linear-gradient(#fff,#dedbd7)
        text-align: center

        &-inner
            position: absolute
            left: 0
            right: 0
            top: 50%
            transform: translateY(-50%)

    &-main.active &-content,
    &-main.active &-item-inner
        &:after
            content: ''
            position: absolute
            z-index: 2
            left: 0
            top: 0
            right: 0
            bottom: 0
            background: rgba(0, 0, 0, .5)


    &-btn
        background: $color_red
        line-height: 40 *$px
        display: inline-block
        margin-top: 10 *$px
        padding: 0 1.2em
        max-width: 100%
        font-size: 16 *$px
        color: #fffe00
        border-radius: 16 *$px
        
        &.disabled
            opacity: .5

    &-border
        position: absolute
        i
            animation: 600ms ease infinite
            animation-play-state: paused
            animation-fill-mode: forwards
            position: absolute
            width: 6 *$px
            height: 6 *$px
            border-radius: 6 *$px

    &-main.active &-border
        i
            animation-play-state: running


    &-top,&-right
        i
            &:nth-child(4n+1)
                background: #fffe00
                animation-name: lottery-marquee-flash-03
            &:nth-child(4n+2)
                background: #c03230
                animation-name: lottery-marquee-flash-04
            &:nth-child(4n+3)
                background: #fff
                animation-name: lottery-marquee-flash-01
            &:nth-child(4n)
                background: #c03230
                animation-name: lottery-marquee-flash-02

    &-bottom,&-left
        i
            &:nth-child(4n+1)
                background: #fff
                animation-name: lottery-marquee-flash-01
            &:nth-child(4n+2)
                background: #c03230
                animation-name: lottery-marquee-flash-02
            &:nth-child(4n+3)
                background: #fffe00
                animation-name: lottery-marquee-flash-03
            &:nth-child(4n)
                background: #c03230
                animation-name: lottery-marquee-flash-04

    &-left,&-right
        top: 3 *$px
        bottom: 3 *$px
        padding: 0 7 *$px
        i
            top: 0
            transform: translateY(-50%)
        $total = 19
        for $i in (1..$total)
            i:nth-child({$i})
                top: (($i+(-1))/($total+(-1)))*100%

    &-top,&-bottom
        left: 3 *$px
        right: 3 *$px
        padding: 7 *$px 0
        i
            left: 0
            transform: translateX(-50%)
        $total = 19
        for $i in (1..$total)
            i:nth-child({$i})
                left:  (($i+(-1))/($total+(-1)))*100%

    &-top
        bottom: 100%
        i
            top: 0
    &-bottom
        top: 100%
        i
            bottom: 0
    &-left
        right: 100%
        i
            left: 0
    &-right
        left: 100%
        i
            right: 0


    &-tab
        opacity: .7

        font-size: 16 *$px
        text-align: center
        margin: 15 *$px
        color: #fff
        border-top: 1px solid #fff
        border-bottom: 1px solid #fff
        line-height: 40 *$px
        &-item
            width: 50%
            display: block
            line-height: 40 *$px
            height: 40 *$px
            &.active
                color: #be3247
                background: #fff

        &-content
            margin: 0 15 *$px 20 *$px
            padding: 0 15 *$px
            color: #fff
            line-height: 22 *$px

    .lottery-bar-btn
        width: 60 *$px
        line-height: 32 *$px
        border: 2px solid $color_red
        color: $color_red
        font-size: 14 *$px
        text-align: center
        border-radius: 8 *$px
        margin-top: 8 *$px
        &.disabled
            color: $color_gray_summary
            border-color: $color_gray_border

    &-public-result,
    &-mine-result
        max-height: 6*22*$px

        &-span-01
            width: 10em
            margin-right: 2em
        
.lottery-marquee-bar-content
    line-height: 18 *$px
    position: absolute
    top: 50%
    left: 15 *$px
    right: 170 *$px
    transform: translateY(-50%)

