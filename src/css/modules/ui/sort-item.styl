.sort-item
    display inline-block
    width 100%
    // transition background .5s

    &.Tappable-active
        background $color_gray_border

    > i
        relative()
        inline-block()
        width len(8)
        height len(13)
        // background url('../images/common/icon-sort-asc.png') no-repeat
        // background-size cover
        vertical-align middle
        fontsize(22)

        &:before,
        &:after
            absolute()
            top len(-10)
            left 0
            content "\e652"
            width len(12)
            height len(12)
            color $color_icon
        &:after
            top auto
            bottom len(10)
            content "\e654"
            color $color_gold_hover

    &.sort-desc
        > i:after
            color $color_icon
        > i:before
            color $color_gold_hover
