.navbar, .toolbar {
    height: $navbar_height;
    line-height: $navbar_height;
    width: 100%;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    position: relative;
    margin: 0;
    z-index: 500;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
}

.navbar {
    left: 0;
    top: 0;
}

.navbar-bg {
    background: #fff;
    border-bottom: 1px solid $color_gray_border
    box-shadow: 0  2 *$px 6 *$px rgba(58,58,58,.06)
}

.toolbar {
    left: 0;
    bottom: 0;
    background: #fff;
    border-top: 1px solid $color_gray_border
}

.page > .navbar, .view > .navbar, .views > .navbar, .page > .toolbar, .view > .toolbar, .views > .toolbar {
    position: absolute;
}

.navbar-inner, .toolbar-inner {
    position: relative;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}
.navbar-inner{
    text-align: center;
}

.bar-flexbox {
    .navbar-inner, .toolbar-inner {
        padding: 0 8px;
    }
}

.navbar-left, .navbar-right {
    align-items: center;
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
}

.navbar-left {
    margin-right: 10*$px;
    position: absolute;
    top: 0*$px;
    left: 10*$px;
}

.navbar-right {
    margin-left: 10*$px;
    position: absolute;
    top:0*$px;
    right: 10*$px;
}

.navbar-center {
    font-size: 17*$px;
    font-weight:500;
    text-align: center;
    margin: 0 auto;
    position: relative;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    line-height: 54*$px;
    display: inline-block;
}
.navbar-icon.icon {
    font-size: 22*$px;
}
.animation-wrap {
    height: 100%;
    width: 100%;
}
