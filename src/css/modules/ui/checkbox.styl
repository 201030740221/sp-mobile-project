***/

.checkbox,
.checkbox-switch
    input
        display: none


.checkbox
    position: relative
    display: inline-block
    padding-left: 2em

    &:before
        content: '\e672'
        -webkit-font-smoothing: antialiased
        -webkit-text-stroke-width: 0.2px
        font-family: iconfont
        text-indent: -5 *$px
        font-size: 24 *$px
        height: 16 *$px
        width: 16 *$px
        line-height: 14 *$px
        text-align: center
        border: 1px solid $color_gray_border
        background: #fff
        box-sizing: border-box
        color: #fff
        position: absolute
        left: 0
        top: 50%
        margin-top: -8 *$px

    &:hover
        color: $color_gold_hover
        &:before
            border-color: $color_gold_hover
    &:active
        color: $color_gold
        &:before
            border-color: $color_gold

    &.active
        &:before
            background: $color_gold
            border-color: $color_gold


    &.active
        &:before
            &:hover
                border-color: $color_gold_hover
                background: $color_gold_hover
            &:active
                background: $color_gold



.checkbox-switch
    position: relative
    display: inline-block
    box-sizing: border-box
    text-align: center
    padding: 0 0 0 30 *$px
    font-size: 12 *$px
    line-height: 24 *$px
    width: 65 *$px
    color: #fff
    background: $color_gray_border

    //&:hover
    //    background: $color_gold_hover

    &:before
        content: '否'

    &:after
        content: ''
        position: absolute
        left: 1 *$px
        top: 1 *$px
        bottom: 1 *$px
        width: 29 *$px
        background: #fff
        transition: left 100ms


    &.active
        padding: 0 30 *$px 0 0
        background: $color_gold
        &:before
            content: '是'
        &:after
            left: 35 *$px

.checkout-label
    line-height: 28 *$px
    &:before
        content: '*'
        color: $color_blackred
