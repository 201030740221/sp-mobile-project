
.comment
    &-list
        margin: 0 15 *$px
    &-item
        padding: 10 *$px 0
        border-bottom: 1px solid $color_gray_border
        &:last-child
            //border: none
        &-hd
            line-height: 24 *$px
        &-bd
            line-height: 20 *$px
        &-album
            position: relative
        &-img-box
            display: inline-block
            width: 30.3%
            margin-right: 4.55%
            margin-top: 10 *$px
            border-radius: 3px
            overflow: hidden
            &:nth-child(3n)
                margin-right: 0

            img
                width: 100%
                display: block
                border-radius: 3px
                
    &-gallery
        height: 100%