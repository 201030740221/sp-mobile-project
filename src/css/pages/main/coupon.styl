.coupon-hd
    background: #fff
    text-align: center
    line-height: 48 *$px
    .u-flex-item-1
        border-right: 1px solid $color_gray_border
    &,.active
        color: $color_gold

// .coupon-bar
//     padding: 6 *$px

.coupon-list
    padding: 15 *$px
    .col-12-24
        padding-bottom: 2 *$px
        &:nth-child(2n)
            padding-left: 1 *$px
        &:nth-child(2n+1)
            padding-right: 1 *$px
.coupon-item
    position: relative
    padding-top: 100%
    //border: dashed $color_gray_border
    //border-width: 1px 0
    //border: 1px solid $color_gray_border

    &.active
        &:before,&:after
            position: absolute
            right: 0
            top: 0
            z-index: 1
        &:before
            content: ""
            width: 16 *$px// 10%
            padding-top: 16 * $px//10%
            border-radius: 0 0 0 100%
            background: $color_gold
        &:after
            content: '\e672'
            -webkit-font-smoothing: antialiased
            -webkit-text-stroke-width: 0.2px
            font-family: iconfont
            color: #fff
            width: 16 *$px
            text-align: center
            transform: translate3d(10%, 1%, 0)
            font-size: 16 *$px
            height: 16 *$px
            line-height: 14 *$px


    &-bd
        position: absolute
        top: 0
        left: 0
        right: 0
        padding-top: 100%
        background: #fff

    &-bd-inner
        position: absolute
        left: 0
        top: 50%
        transform: translate3d(0, -50%, 0)
        text-align: center
        width: 100%

    footer
        background: $color_gold
        color: #fff
        text-align: center
        line-height: 16 *$px
        padding: 8 *$px 0

    &-value
        color: $color_gold
    &.unusable &-value
    &.outdated &-value
        color: $color_gray_summary
    &.unusable footer
    &.outdated footer
        background: $color_gray_summary

    &.outdated
        opacity: .3
