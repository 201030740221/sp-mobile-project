$activity_red = $color_red

.activity-july-banner
    width: 100%;

    &-inner
        position: relative;
        &-link
            position: absolute;
            width: 100%;
            height:100%;
            z-index:1;

        &-close
            position: absolute;
            width: 65*$px;
            height:37*$px;
            z-index:2;
            right: 10*$px
            top: 10*$px

.bg-convert-goods
    background: #f7f0ee

.bg-falsh-goods
    background: #f6f6f6

.convert-goods
    padding: 20*$px 0

    &-img
        padding-left: 10*$px
        padding-right: 5*$px

    &-info
        padding-right: 10*$px
        padding-left: 5*$px
        h3
            font-size: 14*$px
        &-desc
            color: $color_gray_label
            // white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        &-price
            color: $activity_red
        &-label
            color: $color_black_title
        &-sumbit
            margin-top: 10*$px

.howToGetPoints
    h3
        border-top: 1px solid $color_gray_border
        border-bottom: 1px solid $color_gray_border
        text-align: center
        font-size:16*$px
        padding: 10*$px 0

    &-box

        &-item
            position relative
            padding: 10*$px
            border-right: 1px solid $color_gray_border
            h4
                color: $color_blackred
                font-size: 16*$px
                font-style italic

            &-desc
                font-size: 12*$px

            &-link
                text-align right
                color: $color_gray_label
                margin-top 10*$px
                font-style italic

            &-absolute-link
                position absolute
                top: 0;
                left: 0
                width: 100%
                height: 100%
                z-index 9

            &-item:last-child
                border-right none

    .icon-prize
        position: absolute
        z-index: -1
        padding: 13%
        right: 6 *$px
        top: 6 *$px
        background: url("/images/activity/1507/icon_prize@2x.png") no-repeat;
        background-size: 100%

._howToGetPoints-box-item-link
    margin-top 25*$px

._howToGetPoints-box-item-link1
    margin-top 25*$px


.flashsale-tabs [role=tablist]
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
.flashsale-tabs [role=tab]
    background: #eaeaea
    -webkit-box-flex: 1;
    -moz-box-flex: 1;
    -webkit-flex: 1;
    -ms-flex: 1;
    flex: 1;
    border-right: 1px solid #fff;
    h4
        em
            color: $activity_red
    p
        color: $color_black_title

.flashsale-tabs [role=tab][aria-selected=true]
    background: #fff;
    border: 1px solid transparent;

.btn.act-color-red
    background: $activity_red
    border: 1px solid $activity_red
    color: #fff;

.act-rule-modal
    padding 20*$px
    h3
        font-size 14*$px
        margin-top 10*$px
        margin-bottom: 10*$px


.activity-july-index

    .navbar-left
    .navbar-right
        .btn.btn-icon
            color: #fff