.presales
    &-slider
        position absolute
        top: 54*$px
        bottom: 54*$px
        left: 0
        right: 0
.presales-home
    &-info
        margin: 20 *$px 12 *$px 0
    h4
        font-size: 14 *$px
        .u-f12
            padding-top: 4 *$px

    .presales-slider-item
        position: relative

        section
            position: absolute
            bottom: 16 *$px
            left: 12 *$px
            right: 12 *$px
            line-height: 14 *$px
            color: #fff
            text-shadow: 1px 1px 1px rgba(0,0,0,.4)
    .icon-1-yuan
        position: absolute
        right: 0
        top: 0
        width: 38 *$px
        height: 38 *$px
        img
            display: block
            width: 100%

.presales-bar-coupon
    background: $color_red
    height: 54 *$px
    position: relative
    color: #fff

    > :first-child
        position: absolute
        left: 12 *$px
    > :nth-child(2)
        position: absolute
        left: 72 *$px
        top: 0
        right: 0
        padding: 5 *$px 0
        line-height: 20 *$px

.presales-guide
    section
        padding: 20 *$px

    em
        font-family: serif
        font-size: 16 *$px
        color: $color_red

    p
        color: $color_gray_summary
// sku选择
.presales-sku-modal-hd
    padding-top: 10 *$px
    margin: 0 12 *$px
    position: relative
    overflow: hidden
    border-bottom: 1px solid $color_gray_border
    &-img
        position: absolute
        left: 12 *$px
        top: 10 *$px
        width: 74 *$px
        height: 74 *$px
        img
            display: block
            width: 100%
    section
        min-height: 66 *$px
        margin: 18 *$px 12 *$px 0 110 *$px
    h3
        font-size: 14 *$px
        margin-bottom: 4 *$px

.presales-sku-modal-content
    padding: 20 *$px 12 *$px 0
    .choice-checkbox-list li.active
        color: $color_red
        border-color: $color_red
        &:after
            display: none


.presales-detail
    &-img-box
        width: 100%
        height: 100%
        background: no-repeat center center
        background-size: cover
.presales-coupon-modal
    overflow: hidden
    h3
        text-align: center
        margin: 30 *$px 0 20 *$px
    &-bd
        position: relative
        margin: 0 20 *$px 10 *$px
        min-height: 125 *$px
        &-main
            margin-left: 145 *$px
            padding: 20 *$px 0 0

    &-img-box
        position: absolute
        width: 125 *$px
        height: 125 *$px
        left: 0
        top: 0
        img
            width: 100%


    &-ft
        background: $color_gray_border
        .btn.btn-primary
            background: $color_red
            color: $color_yellow


.presales-up-icon
    transform: rotate(90deg)
    color: $color_gray_summary
    position: absolute
    z-index: 2
    left: 0
    right: 0
    bottom: 50 *$px
    width: 1em
    margin: auto
    font-size: 30 *$px
    pointer-events: none